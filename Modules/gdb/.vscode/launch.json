{
  /*
@COPY_REMARK@*/
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with .cmake",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "@DEBUG_ARGS@"
      ],
      "stopAtEntry": false,
      "cwd": "${command:cmake.getLaunchTargetDirectory}",
      "environment": [
        {
          "name": "@VK_LAYER_TOGGLE@",
          "value": "1"
        },
        {
          "name": "VK_LOADER_DEBUG",
          "value": "@VK_LOADER_DEBUG@"
        },
        {
          "name": "VK_ADD_IMPLICIT_LAYER_PATH",
          "value": "@VK_ADD_IMPLICIT_LAYER_PATH@"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: build"
    }
  ]
}
