{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 10,
  "configurePresets": [
    {
      "name": "common",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        },
        "DOTCMAKE_CONFIGURE_IDE": {
          "type": "BOOL",
          "value": "ON"
        }
      },
      "toolchainFile": "${fileDir}/../ToolChains/common.cmake",
      "hidden": true
    },
    {
      "name": "common::debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "binaryDir": "${sourceDir}/build/Debug-${hostSystemName}",
      "hidden": true
    },
    {
      "name": "debug",
      "inherits": ["common", "common::debug"]
    },
    {
      "name": "common::release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "binaryDir": "${sourceDir}/build/Release-${hostSystemName}",
      "hidden": true
    },
    {
      "name": "release",
      "inherits": ["common", "common::release"]
    }
  ],
  "buildPresets": [
    { "name": "common", "hidden": true },
    {
      "name": "debug",
      "inherits": ["common"],
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "inherits": ["common"],
      "configurePreset": "release"
    }
  ]
}
