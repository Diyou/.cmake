{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 10,
  "include": ["common.json"],
  "configurePresets": [
    {
      "name": "default::clang",
      "inherits": ["default"],
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "hidden": true
    },
    {
      "name": "debug::clang",
      "inherits": ["common::debug", "default::clang"],
      "binaryDir": "${sourceDir}/build/Debug-${hostSystemName}-clang"
    }
  ]
}
