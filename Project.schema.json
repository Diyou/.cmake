{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dotcmake's Project configuration Schema",
  "type": "object",
  "properties": {
    "Project": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "type": "string",
          "default": "MyProject"
        },
        "ID": {
          "type": "string",
          "default": "org.dotcmake.myproject"
        },
        "Version": {
          "type": "string",
          "default": "0.0.1"
        },
        "URL": {
          "type": "string",
          "default": "https://github.com/Diyou/.cmake"
        },
        "Description": {
          "type": "string",
          "default": "My awesome c++ project with .cmake"
        }
      },
      "required": ["Name", "ID", "Version"]
    },
    "Depends": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": { "type": "string", "enum": ["git"] },
              "url": { "type": "string" },
              "tag": { "type": "string" },
              "shallow": { "type": "boolean", "default": false },
              "config": {
                "type": "string",
                "description": "CMake configuration file relative to project root"
              },
              "patch": {
                "type": "string",
                "description": "CMake patch file relative to project root"
              }
            },
            "required": ["type", "url", "tag"]
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": { "type": "string", "enum": ["archive"] },
              "name": { "type": "string" },
              "url": { "type": "string" },
              "config": {
                "type": "string",
                "description": "CMake configuration file relative to project root"
              },
              "patch": {
                "type": "string",
                "description": "CMake patch file relative to project root"
              }
            },
            "required": ["type", "name", "url"]
          }
        ]
      },
      "default": [
        {
          "type": "git"
        }
      ]
    }
  },
  "required": ["Project"]
}
