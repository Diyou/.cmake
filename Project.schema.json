{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dotcmake's Project configuration Schema",
  "type": "object",
  "properties": {
    "Project": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "type": "string",
          "default": "MyProject"
        },
        "ID": {
          "type": "string",
          "default": "org.dotcmake.myproject"
        },
        "Version": {
          "type": "string",
          "default": "0.0.1"
        },
        "URL": {
          "type": "string",
          "default": "https://github.com/Diyou/.cmake"
        },
        "Description": {
          "type": "string",
          "default": "My awesome c++ project with .cmake"
        }
      },
      "required": ["Name", "ID", "Version"]
    },
    "Depends": {
      "type": "object",
      "uniqueItems": true,
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["archive"] },
                "url": { "type": "string" },
                "sha256": {
                  "type": "string",
                  "description": "Confirm hash before extracting"
                }
              },
              "required": ["type", "url"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["git"] },
                "url": { "type": "string", "description": "Git URL" },
                "tag": {
                  "type": "string",
                  "description": "Tag or Hash to checkout"
                },
                "shallow": {
                  "type": "boolean",
                  "default": true,
                  "description": "Shallow clone"
                }
              },
              "required": ["type", "url", "tag"]
            }
          ],
          "properties": {
            "config": {
              "type": "string",
              "description": "CMake configuration file to include before add_subdirectory"
            },
            "patch": {
              "type": "string",
              "description": "CMake patch file to execute after setup/update"
            }
          },
          "default": {
            "type": "git"
          }
        }
      }
    }
  },
  "required": ["Project"]
}
